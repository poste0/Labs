<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="ticketsTable"
        messagesPack="com.company.enterpriselaba.web.screens.ticket">
    <data readOnly="true">
        <collection id="ticketsDc"
                    class="com.company.enterpriselaba.entity.Ticket"
                    view="ticket-view">
            <loader id="ticketsDl">
                <query>
                    <![CDATA[select e from enterpriselaba_Ticket e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ticketsTable"
            spacing="true">
        <filter id="filter"
                applyTo="ticketsTable"
                dataLoader="ticketsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ticketsTable"
                    width="100%"
                    dataContainer="ticketsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="status"/>
                <group>
                    <column id="show.name"/>
                </group>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ticketsTable.create"/>
                <button id="editBtn" action="ticketsTable.edit"/>
                <button id="removeBtn" action="ticketsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
